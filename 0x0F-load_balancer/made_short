onfiguring HAproxy

sudo apt-get update
sudo apt-get -y install haproxy
sudo service haproxy start
cfg='\nlisten website
\tbind 0.0.0.0:80
\tmode http
\tstats enable
\tbalance roundrobin
\toption forwardfor
\toption httpclose
\tserver 934-web-01 34.74.157.171:80 check
\tserver 934-web-02 35.243.248.124:80 check'
chg_value="\\\\nENABLED=1"
echo -e "$cfg" | sudo tee -a /etc/haproxy/haproxy.cfg
sudo sed -i "10a $chg_value" /etc/default/haproxy
sudo service haproxy restart
